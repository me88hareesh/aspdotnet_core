@page
@model ProductImagesModel
@{
    ViewData["Title"] = "ProductImages";
}

<h1>Add Product Images</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-page="ProductImages">
            <div class="form-group">
                <select asp-for="ProductImages.ProductID" class="form-control" asp-items="@(new SelectList(Model.productList,"ID","ProductName"))">
                    <option value="" selected disabled>--Select product--</option>
                </select>
            </div>
            <div class="form-group">
                <input type="file" multiple="multiple" name="photos" />
            </div>
            <div class="form-group">
                 <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>

